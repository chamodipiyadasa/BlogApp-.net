@model BlogApp.Models.Post
@{
    ViewData["Title"] = "Create New Post";
}

<div class="container">
    <section class="section-header">
        <h1 class="section-title">Write Your Story</h1>
        <p class="vintage-subtitle">Share your thoughts with the world</p>
        <div class="decorative-line"></div>
    </section>

    <form asp-action="Create" class="vintage-form">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="form-group">
            <label asp-for="Title" class="form-label">Story Title</label>
            <input asp-for="Title" class="form-control" placeholder="Give your story a compelling title..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="form-label">Your Story</label>
            <textarea asp-for="Content" class="form-control" rows="12" 
                      placeholder="Tell your story... Share your thoughts, experiences, or insights. What would you like the world to know?"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="vintage-btn btn-primary me-3">üìù Publish Story</button>
            <a asp-controller="Post" asp-action="Index" class="vintage-btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}