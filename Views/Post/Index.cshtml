@model List<BlogApp.Models.Post>
    

<h2>Blog Posts</h2>
<a href="/Post/Create">+ New Post</a>

@{
    ViewData["Title"] = "Welcome";
}

<div class="container mt-5 text-center">
    <h1 class="display-4">Welcome to BlogApp üìù</h1>
    <p class="lead">Share your thoughts, read others‚Äô, and grow together.</p>

    <div class="mt-4">
        <a class="btn btn-primary btn-lg me-2" asp-controller="Post" asp-action="Index">Browse Posts</a>
        <a class="btn btn-success btn-lg" asp-controller="Post" asp-action="Create">Create a Post</a>
    </div>
</div>

<ul>
@foreach (var post in Model)
{
    <li>
        <b>@post.Title</b> (@post.CreatedAt.ToShortDateString()) |
        <a href="/Post/Details/@post.Id">View</a> |
        <a href="/Post/Edit/@post.Id">Edit</a> |
        <a href="/Post/Delete/@post.Id">Delete</a>
    </li>
}
</ul>
